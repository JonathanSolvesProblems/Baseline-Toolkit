{
  "name": "baseline-toolkit-vscode",
  "displayName": "Baseline Toolkit",
  "description": "Real-time linting for web feature Baseline compatibility",
  "version": "1.0.0",
  "publisher": "baseline-toolkit",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "baseline",
    "web standards",
    "compatibility",
    "css",
    "javascript"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baselineToolkit.checkCurrentFile",
        "title": "Check Current File",
        "category": "Baseline Toolkit"
      },
      {
        "command": "baselineToolkit.checkWorkspace",
        "title": "Check Entire Workspace",
        "category": "Baseline Toolkit"
      }
    ],
    "configuration": {
      "title": "Baseline Toolkit",
      "properties": {
        "baselineToolkit.rules.allowLow": {
          "type": "boolean",
          "default": false,
          "description": "Allow features with 'low' baseline status"
        },
        "baselineToolkit.rules.blockFalse": {
          "type": "boolean",
          "default": true,
          "description": "Block features with 'false' baseline status"
        },
        "baselineToolkit.showHoverInfo": {
          "type": "boolean",
          "default": true,
          "description": "Show detailed information on hover"
        },
        "baselineToolkit.enableCodeActions": {
          "type": "boolean",
          "default": true,
          "description": "Enable code action suggestions"
        }
      }
    },
    "languages": [
      {
        "id": "css",
        "aliases": ["CSS"],
        "extensions": [".css", ".scss", ".sass"]
      },
      {
        "id": "javascript",
        "aliases": ["JavaScript"],
        "extensions": [".js", ".jsx"]
      },
      {
        "id": "typescript",
        "aliases": ["TypeScript"],
        "extensions": [".ts", ".tsx"]
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@baseline-toolkit/core": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}