{
  "name": "@baseline-toolkit/extension",
  "displayName": "Baseline Toolkit",
  "description": "Real-time linting for web feature Baseline compatibility in VS Code.",
  "version": "1.0.1",
  "publisher": "JonathanSolvesProblems",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "public/assets/logo.png",
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "baseline",
    "web standards",
    "compatibility",
    "css",
    "javascript",
    "typescript"
  ],
  "activationEvents": [
    "onCommand:baselineToolkit.generateJSONAndOpenDashboard",
    "onCommand:baselineToolkit.checkCurrentFile",
    "onCommand:baselineToolkit.checkWorkspace",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baselineToolkit.generateJSONAndOpenDashboard",
        "title": "Generate Baseline JSON & Open Dashboard",
        "category": "Baseline Toolkit"
      },
      {
        "command": "baselineToolkit.checkWorkspace",
        "title": "Check Entire Workspace",
        "category": "Baseline Toolkit"
      },
      {
        "command": "baselineToolkit.checkCurrentFile",
        "title": "Check Current File",
        "category": "Baseline Toolkit"
      }
    ],
    "configuration": {
      "title": "Baseline Toolkit",
      "properties": {
        "baselineToolkit.rules.allowLow": {
          "type": "boolean",
          "default": false,
          "description": "Allow features with 'low' baseline status."
        },
        "baselineToolkit.rules.blockFalse": {
          "type": "boolean",
          "default": true,
          "description": "Block features with 'false' baseline status."
        },
        "baselineToolkit.showHoverInfo": {
          "type": "boolean",
          "default": true,
          "description": "Show detailed information on hover."
        },
        "baselineToolkit.enableCodeActions": {
          "type": "boolean",
          "default": true,
          "description": "Enable code action suggestions."
        }
      }
    },
    "languages": [
      {
        "id": "css",
        "aliases": [
          "CSS"
        ],
        "extensions": [
          ".css",
          ".scss",
          ".sass"
        ]
      },
      {
        "id": "javascript",
        "aliases": [
          "JavaScript"
        ],
        "extensions": [
          ".js",
          ".jsx"
        ]
      },
      {
        "id": "typescript",
        "aliases": [
          "TypeScript"
        ],
        "extensions": [
          ".ts",
          ".tsx"
        ]
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --platform=node --outfile=dist/extension.js --external:vscode",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.24.0",
    "esbuild": "^0.25.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JonathanSolvesProblems/Baseline-Toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/JonathanSolvesProblems/Baseline-Toolkit/issues"
  },
  "homepage": "https://github.com/JonathanSolvesProblems/Baseline-Toolkit#readme"
}
